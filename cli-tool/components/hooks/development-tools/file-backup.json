{
  "description": "Automatically backup files before editing. Creates timestamped backups in a .backups directory when files are modified.",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "if [[ -n \"$GEMINI_TOOL_FILE_PATH\" && -f \"$GEMINI_TOOL_FILE_PATH\" ]]; then mkdir -p .backups && cp \"$GEMINI_TOOL_FILE_PATH\" \".backups/$(basename \"$GEMINI_TOOL_FILE_PATH\").$(date +%Y%m%d_%H%M%S).bak\"; fi"
          }
        ]
      }
    ]
  }
}